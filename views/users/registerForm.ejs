<%- include('../partials/headers.ejs', {title: "Register Form"}) %>

<body>
   <div class=" h-100 d-flex justify-content-center align-items-center" style="padding-top: 200px;">
      <div>
         <div class="card card-body ">
            <div class="center-text">
               <h1>Register</h1>
            </div>
           
            
            <form action="/users/register" method="POST">

               <div class="form-group">
                  <label for="name">Username</label>
                  <input type="name" id="name" name="username" class="form-control" placeholder="Enter Username" required/>
               </div>

               <div class="form-group">
                  <label for="password">Password</label>
                  <input type="password" id="password" name="password" class="form-control"
                     placeholder="Create Password" />
               </div>

               <button type="submit" class="btn btn-primary btn-block" style="width: auto;">
                  Register
               </button>

            </form>
            <p class="lead mt-4">Have an account? <a href="/users/login">Login</a></p>
         </div>
      </div>
    </div>
</body>

</html>