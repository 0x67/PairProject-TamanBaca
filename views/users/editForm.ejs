<%- include('../partials/headers.ejs', {title: "Edit Form"}) %>

<body>
   <form action="/users/edit/<%= userData.id %> " method="post">
      <div class="form-group">
         <label class="col-form-label" for="username">Edit Username</label>
         <input type="text" class="form-control" placeholder="E.g. somerandomUser231" name="username"
            value="<%= userData.username %>" required>
      </div>

      <div class="form-group">
         <label class="col-form-label" for="password">Edit Password</label>
         <input type="password" class="form-control" placeholder="E.g. ac917231ac" name="password" required>
      </div>

      <div class="form-group">
         <label class="col-form-label" for="role">Edit Role</label>
         <div class="custom-control custom-radio">
            <input type="radio" id="customRadio1" name="role" class="custom-control-input" value="admin"
               <% if(userData.role === 'admin') { %> checked <% } %>>
            <label class="custom-control-label" for="customRadio1">Admin</label>
         </div>
         <div class="custom-control custom-radio">
            <input type="radio" id="customRadio2" name="role" class="custom-control-input" value="user"
               <% if(userData.role === 'user') { %> checked <% } %>>
            <label class="custom-control-label" for="customRadio2">User</label>
         </div>
      </div>

      <button class="btn btn-outline-success" type="submit">Save</button>
      <a class="btn btn-outline-danger" href="/users/list" role="button">Cancel</a>
   </form>
</body>

</html>