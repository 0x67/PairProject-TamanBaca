<%- include('partials/headers.ejs', { title: 'Edit Book' }) %>

<body>
   <h1>Edit Book</h1>

   <%- include('partials/errMessage.ejs') %>

   <form action='/books/edit/<%= book.id %>' method='POST'>
      <div class="form-group">
         <label class="col-form-label" for="title">Book Title</label>
         <input type="text" class="form-control" placeholder="E.g. Veronika Decides to Die" name="title" value='<%= book.title %>' required>
      </div>

      <div class="form-group">
         <label class="col-form-label" for="author">Author Name</label>
         <input type="text" class="form-control" placeholder="E.g. Paulo Coelho" name="author" required value='<%= book.author %>'>
      </div>

      <div class="form-group">
         <label class="col-form-label" for="cover">Book Cover (Link to an image)</label>
         <input type="text" class="form-control" placeholder="E.g. https://shorturl.at/axOWX" name="cover" required value='<%= book.cover %>'>
      </div>

      <div class="form-group">
         <label class="col-form-label" for="stock">Stock</label>
         <input type="number" class="form-control" placeholder="E.g. 5" name="stock" required value='<%= book.stock %>'>
      </div>

      <button class="btn btn-outline-success" type="submit">Edit Book Information</button>
      <a class="btn btn-outline-danger" href="/books" role="button">Cancel</a>
   </form>
   
</body>

<%- include('partials/footer.ejs') %>